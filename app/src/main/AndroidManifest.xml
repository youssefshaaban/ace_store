<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mvvm_template">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVVM_Template">
        <activity android:name=".ui.component.reorder.ReorderActivity"></activity>
        <activity android:name=".ui.component.main.rate_app.RateMeActivity" />
        <activity
            android:name=".ui.component.setting.SettingActivity"
            android:exported="true" />
        <activity
            android:name=".ui.component.profile_info.ProfileInfoActivity"
            android:exported="true" />
        <activity
            android:name=".ui.component.item_detail.ItemDetailActivity"
            android:exported="true" />
        <activity android:name=".ui.component.item_categories.ItemCategoriesActivity" />
        <activity android:name=".ui.component.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.component.signup.SignUpActivity" />
        <activity android:name=".ui.component.verfication.VerficationActivity" />
        <activity android:name=".ui.component.login.LoginActivity" />
        <activity android:name=".ui.component.SplashActivity" />
    </application>

</manifest>