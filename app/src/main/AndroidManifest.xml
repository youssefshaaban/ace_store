<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mvvm_template">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVVM_Template"
        android:usesCleartextTraffic="true"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".ui.component.cart.CartActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity android:name=".ui.component.main.web_view.WebViewActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.component.reorder.ReorderActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.component.main.rate_app.RateMeActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.component.card_categories.ProductCategoriesActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.component.search.SearchActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.component.setting.SettingActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.mvvm_template.ui.component.main.bottom.profile.profile_info.ProfileInfoActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.component.product_detail.ProductDetailActivity"
            android:exported="true" android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.component.main.MainActivity"
            android:launchMode="singleTask"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.example.mvvm_template.ui.component.auth.signup.ContinueCompleteActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.example.mvvm_template.ui.component.auth.verfication.LogiWithOtpActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.example.mvvm_template.ui.component.auth.login.GenerateOtpActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            />
        <activity android:name=".ui.component.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.component.on_boarding.OnBoardingActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>