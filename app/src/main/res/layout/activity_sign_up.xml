<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color_page1"
        >
        <TextView
            android:layout_width="wrap_content"
            style="@style/TextRegularFont"
            android:padding="@dimen/_5sdp"
            android:text="@string/skip"
            android:id="@+id/skip"
            android:visibility="gone"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_20sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_60sdp"
            style="@style/TextBoldFont"
            android:text="@string/continue_register"
            android:textColor="@color/white"
            android:id="@+id/txt_login"
            android:textSize="@dimen/text_size18"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_login"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/back_top_raduis_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/TextRegularFont"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/userName"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="wrap_content"
                        style="@style/TextRegularFont"
                        android:text="*"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/back_raduis_white"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:id="@+id/firstname"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/text_size13"
                        android:inputType="text"
                        android:textColorHint="@color/txt_color2"
                        android:hint="@string/hint_phone"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    style="@style/TextRegularFont"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/family_name"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="wrap_content"
                        style="@style/TextRegularFont"
                        android:text="*"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/back_raduis_white"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:id="@+id/second_name"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/text_size13"
                        android:inputType="text"
                        android:textColorHint="@color/txt_color2"
                        android:hint="@string/hint_second_name"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/TextRegularFont"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/email"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/TextRegularFont"
                        android:text="*"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/back_raduis_white"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:id="@+id/email"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/text_size13"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/txt_color2"
                        android:hint="@string/email"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/register"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/back_raduis_white"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/createAccount"
                    android:textSize="@dimen/text_size18"
                    android:fontFamily="@font/tajawal_medium"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/haveAccount"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/color_txt_new_account"
                        android:text="@string/login"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>