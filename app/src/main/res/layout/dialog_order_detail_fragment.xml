<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="order"
            type="com.example.mvvm_template.domain.entity.Order" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/back_top_raduis_white"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orderDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            style="@style/TextMediumFont"
            android:id="@+id/txt_order_detail"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:src="@drawable/ic_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/dimen5"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rv_orders"
            app:layout_constraintTop_toBottomOf="@id/txt_order_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/content_order_price"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#F0F0F0"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/content_order_price"
            app:contentPadding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderNum"
                    android:id="@+id/txt_order_num"
                    android:padding="@dimen/_5sdp"
                    style="@style/TextMediumFont"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txt_order_num"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/orderNum"
                    style="@style/TextMediumFont"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/colorPrimary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderPrice"
                    android:id="@+id/txt_order_price"
                    android:padding="@dimen/_5sdp"
                    style="@style/TextMediumFont"
                    app:layout_constraintTop_toBottomOf="@id/txt_order_num"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txt_order_price"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/orderNum"
                    android:id="@+id/orderPrice"
                    style="@style/TextMediumFont"
                    android:layout_marginStart="@dimen/_5sdp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderVat"
                    android:id="@+id/txt_order_vat"
                    android:padding="@dimen/_5sdp"
                    style="@style/TextMediumFont"
                    app:layout_constraintTop_toBottomOf="@id/txt_order_price"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txt_order_vat"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/orderPrice"
                    android:id="@+id/orderVat"
                    style="@style/TextMediumFont"
                    android:layout_marginStart="@dimen/_5sdp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderDiscount"
                    android:id="@+id/txt_order_discount"
                    android:padding="@dimen/_5sdp"
                    style="@style/TextMediumFont"
                    app:layout_constraintTop_toBottomOf="@id/txt_order_vat"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txt_order_discount"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/orderVat"
                    android:id="@+id/orderDiscount"
                    style="@style/TextMediumFont"
                    android:layout_marginStart="@dimen/_5sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderTotal"
                    android:id="@+id/txt_order_total"
                    android:padding="@dimen/_5sdp"
                    style="@style/TextMediumFont"
                    app:layout_constraintTop_toBottomOf="@id/txt_order_discount"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txt_order_total"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/orderDiscount"
                    android:id="@+id/orderTotal"
                    style="@style/TextMediumFont"
                    android:layout_marginStart="@dimen/_5sdp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>