<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentPadding="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:src="@drawable/ic_demo_cat"
                android:padding="@dimen/_5sdp"
                android:id="@+id/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="@dimen/_40sdp"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/txt_order_num"
                android:text="@string/orderNum"
                android:textColor="@color/black"
                style="@style/TextMediumFont"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/text_size14"
                app:layout_constraintStart_toEndOf="@id/icon"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/valueOrder"
                style="@style/TextRegularFontDigit"
                app:layout_constraintTop_toTopOf="parent"
                android:text="dsfdfsd"
                android:textSize="@dimen/text_size14"
                app:layout_constraintStart_toEndOf="@id/txt_order_num"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/color_txt_new_account"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/TextRegularFontDigit"
                android:id="@+id/price"
                android:textSize="@dimen/text_size16"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/date"
                app:layout_constraintTop_toBottomOf="@id/txt_order_num"
                app:layout_constraintStart_toEndOf="@id/icon"
                android:padding="@dimen/_2sdp"
                style="@style/TextRegularFont"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/color_txt_new_account"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toBottomOf="@id/date"
                style="@style/TextRegularFont"
                android:id="@+id/nameAction"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:background="@drawable/back_raduis_white"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/reOrder"
                android:textColor="@color/white"
                android:paddingTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>