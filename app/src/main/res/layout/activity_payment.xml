<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color_page"
        tools:context=".ui.component.cart.CartActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/txt_amount"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_20sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/creditCard"
                    android:id="@+id/txt_credit"
                    style="@style/TextMediumFont"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/txt_amount"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <ImageView
                    android:id="@+id/visa"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_visa"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/txt_credit"
                    app:layout_constraintTop_toBottomOf="@id/txt_amount" />

                <ImageView
                    android:id="@+id/master"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_master"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_credit"
                    app:layout_constraintEnd_toStartOf="@id/visa"
                    app:layout_constraintTop_toBottomOf="@id/txt_amount"/>

                <ImageView
                    android:id="@+id/mada"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_mada"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_credit"
                    app:layout_constraintEnd_toStartOf="@id/master"
                    app:layout_constraintTop_toBottomOf="@id/txt_amount"/>



                <EditText
                    android:layout_width="match_parent"
                    android:background="@drawable/back_raduis_white"
                    android:id="@+id/cardNumber"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/text_size13"
                    android:inputType="number"
                    android:fontFamily="@font/tajawal_regular"
                    app:layout_constraintTop_toBottomOf="@id/txt_credit"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColorHint="@color/txt_color2"
                    android:hint="@string/card_number"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:layout_width="match_parent"
                    android:background="@drawable/back_raduis_white"
                    android:id="@+id/cardHolderName"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/tajawal_regular"
                    android:textSize="@dimen/text_size13"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@id/cardNumber"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColorHint="@color/txt_color2"
                    android:hint="@string/card_holder"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_width="@dimen/_60sdp"
                    android:background="@drawable/back_raduis_white"
                    android:id="@+id/expMonth"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/tajawal_regular"
                    android:textSize="@dimen/text_size13"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@id/cardHolderName"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColorHint="@color/txt_color2"
                    android:hint="@string/expirMonth"
                    android:maxLength="2"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_width="@dimen/_60sdp"
                    android:background="@drawable/back_raduis_white"
                    android:id="@+id/expYear"
                    android:fontFamily="@font/tajawal_regular"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/text_size13"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="4"
                    app:layout_constraintTop_toBottomOf="@id/cardHolderName"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColorHint="@color/txt_color2"
                    android:hint="@string/expireYear"
                    app:layout_constraintStart_toEndOf="@id/expMonth"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:layout_width="@dimen/_100sdp"
                    android:background="@drawable/back_raduis_white"
                    android:id="@+id/cvv"
                    android:fontFamily="@font/tajawal_regular"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/text_size13"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="3"
                    app:layout_constraintTop_toBottomOf="@id/cardHolderName"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColorHint="@color/txt_color2"
                    android:hint="@string/bt_cvv"
                    app:layout_constraintStart_toEndOf="@id/expYear"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_raduis_white"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/pay"
                    android:id="@+id/pay"
                    app:layout_constraintTop_toBottomOf="@id/expMonth"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>