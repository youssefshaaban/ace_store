<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <import type="com.example.mvvm_template.utils.ConstantMethod"/>
    <variable
        name="point"
        type="com.example.mvvm_template.domain.entity.PaymentMethod" />
    <variable
        name="wallet"
        type="com.example.mvvm_template.domain.entity.PaymentMethod" />
    <variable
        name="type"
        type="String" />
    <variable
        name="currency"
        type="String" />
    <import type="android.view.View"/>
  </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_top_raduis_white"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txt_method"
      style="@style/TextMediumFont"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:padding="@dimen/dimen4"
      android:textSize="@dimen/text_size16"
      android:text="@string/txt_payment_method"
      />


  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/cancel"
      android:src="@drawable/ic_close"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:padding="@dimen/dimen5"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/TextRegularFont"
      android:id="@+id/title"
      android:text="@string/txt_title_payment_method"
      android:textSize="@dimen/text_size14"
      android:layout_marginTop="@dimen/dimen10"
      app:layout_constraintTop_toBottomOf="@id/txt_method"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title"
      style="@style/TextRegularFont"
      android:padding="@dimen/dimen5"
      android:id="@+id/txt_accept"
      android:layout_marginTop="@dimen/dimen10"
      android:text="@string/text_accept_terms_condition"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/txt_policy"
      android:id="@+id/txt_policy"
      style="@style/TextRegularFont"
      android:textColor="@color/colorAccent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/txt_accept"
      />

  <ProgressBar
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/progress"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/txt_policy"
      android:layout_marginTop="@dimen/_5sdp"
      app:layout_constraintBottom_toBottomOf="parent"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="0dp"

      android:id="@+id/rv_method_type"
      app:layout_constraintTop_toBottomOf="@id/txt_policy"
      android:layout_margin="@dimen/dimen5"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      />

  <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:id="@+id/content_wallet_points"
      android:visibility="@{type.equals(ConstantMethod.PLACE_ORDER)? View.VISIBLE  : View.GONE }"
      app:layout_constraintTop_toBottomOf="@id/rv_method_type"
      android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/dimen5"
        app:cardCornerRadius="@dimen/dimen10"
        android:id="@+id/contentWallet"
        android:tag="@{wallet}"
        android:layout_margin="@dimen/dimen5"
        >
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:padding="@dimen/_5sdp"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/walletText"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/menu_wallet"
            android:textSize="@dimen/text_size16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/walletValue"
            android:text="@{wallet.totalWalletAmount +` `+ currency}"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/walletText"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/dimen5"
        app:cardCornerRadius="@dimen/dimen10"
        android:id="@+id/contentPoint"
        android:tag="@{point}"
        android:layout_margin="@dimen/dimen5"
        >
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:id="@+id/content"
          android:padding="@dimen/_5sdp"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/walletPoints"
            android:gravity="center"
            android:textSize="@dimen/text_size14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/points"
            android:text="@{point.equivalentPointsAmount +` `+ currency}"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/points"
            android:gravity="center"
            android:text="@{``+@string/total_points +`:`+ ` `+point.totalPoint}"
            android:textSize="@dimen/text_size14"
            app:layout_constraintTop_toTopOf="parent"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


  </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>