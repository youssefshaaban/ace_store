<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextMediumFont">
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="fontFamily">@font/tajawal_medium</item>
    </style>

    <style name="TextRegularFont">
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="fontFamily">@font/tajawal_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextBoldFont">
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="fontFamily">@font/tajawal_bold</item>
    </style>
    <style name="TextRegularFontDigit">
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="fontFamily">@font/digit_regular</item>
    </style>

    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <dimen name="text_size15">15sp</dimen>
</resources>